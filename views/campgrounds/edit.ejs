<% include ../partials/header %>
<div class="ui main class container segment">
    <div class="row">
        <h1  style="text-align: center">Edit <%=campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form class="ui form" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Question title</label>
                    <input class="form-control" type="text" name="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="ui field">
                    <label>Description:</label>
                    <textarea name="campground[description]"> <%= campground.description %></textarea>
                </div>
                <input class="ui basic blue button" type="submit" >
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
