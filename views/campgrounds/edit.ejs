<% include ../partials/header %>
<form  action="/campgrounds/<%=campground._id %>?_method=PUT"  method="POST">
         <div class="container" style="width:20% ; margin : 0 auto; padding:1.6em">
             <h3 style="text-align:center;"><b >Create New Campground !</b></h3>
             <div class="form-group">
            <input type="text" class="form-control" name="campground[name]"  value="<%= campground.name %>">
         </div>
          
         <div class="form-group">
            <input type="text" class="form-control" name="campground[image]"  value="<%= campground.image %>" >
         </div>
          
             <div class="form-group">
                        <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
             </div>
         
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
            <div style="margin:25px 0">
              <a href="#">Go back</a>
            </div>
         </div>
</form>