<% include ../partials/header %> 
<div  class="container " >
    <div class="col-md-9 ">
        <h3><b><%= campground.name %></b></h3>
        <div class="thumbnail ">
            
            <img class="img-responsive" src="<%= campground.image %>">
            <div class="caption-full">
                <h4 class="pull-right">$4.00/night</h4>
                <p ><b>Description: </b><%= campground.description %></p>
                <p><i> Submitted by <%= campground.author.username  %> </i> </p>
            </div>
        </div>
    </div>
    <div class="row" id="comment" >
        <a class="btn btn-sm btn-success"  href="/campgrounds/<%= campground._id %>/comments/new"> Add Comment</a>
        <% campground.comments.forEach(function(comment){ %>
            <p><strong><%= comment.author.username  %></strong>-<span><i>2 days ago... </i></span><br>
            <%= comment.text %></p>
        <% }) %>
    </div>
</div>