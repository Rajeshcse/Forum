<% include ../partials/header %>
<form  action="/campgrounds" method="POST">
         <div class="container" style="width:20% ; margin : 0 auto; padding:1.6em">
             <h3 style="text-align:center;"><b >Create New Campground !</b></h3>
             <div class="form-group">
            <input type="text" class="form-control" name="name"  placeholder="Enter name">
         </div>
          
         <div class="form-group">
            <input type="text" class="form-control" name="image"  placeholder="image URL">
         </div>
          
         <div class="form-group">
            <textarea placeholder="Description" name="description" style="height:150px"  type="text" class="form-control" ></textarea>
         </div>
          
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
            <div style="margin:25px 0">
              <a href="#">Go back</a>
            </div>
         </div>
</form>